{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["DOM", "ES5", "ES2020.Symbol.WellKnown"],
    "rootDir": ".",
    "types": ["vitest/globals"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["src/**/*", "scripts/**/*.ts", "tests/**/*.ts"]
}
