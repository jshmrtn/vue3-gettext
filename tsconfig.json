{
  "compilerOptions": {
    "target": "ES2018",
    "module": "esnext",
    "sourceMap": false,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "lib": ["DOM", "ES5", "ES2021"],
    "rootDir": ".",
    "types": ["vitest/globals"],
    "allowJs": true
  },
  "exclude": ["node_modules", "**/node_modules/*"],
  "include": ["src/**/*.ts", "tests/**/*.ts"]
}
